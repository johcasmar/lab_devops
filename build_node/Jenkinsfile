pipeline {
    agent {docker
	{ image 'node:lts-alpine3.13'}
							}

        stages {
            stage ('install') {
                steps {
                    dir("build_node"){
                      sh "npm install"
                    } 
                }
            }
            stage ('test') {
                steps {
                  dir("build_node"){
                        sh "npm test"
                  }
                }
            }
            
        }
}
